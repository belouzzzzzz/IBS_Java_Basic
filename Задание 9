package com.max.idea;
import java.util.Scanner;

public class Practic9 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Введи длину массива");
        int size = sc.nextInt();
        double mass [] = new double[size];
        double a =0;
        System.out.println("А теперь заполни массив");
        for (int i=0; i<size; i++ ) {
            mass[i] = sc.nextDouble();
            a+=mass[i];
        }
        System.out.println("Среденее арифметическое = "+a);
        System.out.print("Каждый элемент массива, умноженный на среднее арифметическое: ");
        for (int i=0; i<size; i++ ) {
            System.out.print(mass[i]*a+" ");

        }
    }
}
